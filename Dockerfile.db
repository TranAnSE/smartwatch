FROM mcr.microsoft.com/mssql/server:2022-latest

# Create work directory
WORKDIR /usr/src/app

# Install sqlcmd
USER root
RUN apt-get update && apt-get install -y curl gnupg2
RUN curl https://packages.microsoft.com/keys/microsoft.asc | apt-key add - && \
    curl https://packages.microsoft.com/config/ubuntu/22.04/prod.list > /etc/apt/sources.list.d/mssql-release.list && \
    apt-get update && \
    ACCEPT_EULA=Y apt-get install -y mssql-tools18 unixodbc-dev

# Copy initialization files
COPY scripts/init.sql /usr/src/app/init.sql
COPY scripts/init-db.sh /usr/src/app/init-db.sh
RUN chmod +x /usr/src/app/init-db.sh

# Set environment variables
ENV PATH="${PATH}:/opt/mssql-tools18/bin"
ENV ACCEPT_EULA=Y
ENV SA_PASSWORD=YourStrong@Passw0rd
ENV MSSQL_PID=Developer

# Configure SQL Server to trust self-signed certificates
ENV MSSQL_SSL_CERT_TRUST=1

USER mssql
EXPOSE 1433

CMD /bin/bash /usr/src/app/init-db.sh